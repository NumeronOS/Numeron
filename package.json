{
  "name": "numeron",
  "version": "0.0.1",
  "description": "Simple starter template",
  "author": "team@0xobelisk.com",
  "license": "GPL3",
  "scripts": {
    "// Utility Commands": "----------------",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "pnpm lint && pnpm format:check && pnpm type-check",
    "start:localnet": "pnpm dubhe node",
    "faucet": "pnpm dubhe faucet --network",
    "deploy": "pnpm dubhe publish --network",
    "upgrade": "pnpm dubhe upgrade --network",
    "schema:gen": "pnpm dubhe schemagen",
    "account:gen": "pnpm dubhe generate-key --output-ts-path ./src/chain/key.ts",
    "check-balance": "pnpm dubhe check-balance --network",
    "config:store": "pnpm dubhe config-store --output-ts-path ./src/chain/config.ts --network",
    "indexer:sqlite": "pnpm sqlite-indexer --force-regenesis --network",
    "// Development Environment": "----------------",
    "dev": "pnpm dev:localnet",
    "dev:localnet": "pnpm setup:localnet && pnpm next dev -p 3002",
    "dev:testnet": "pnpm setup:testnet && pnpm next",
    "dev:mainnet": "pnpm setup:mainnet && pnpm next",
    "setup:localnet": "pnpm account:gen && pnpm faucet localnet && pnpm run deploy localnet && pnpm run config:store localnet && (pnpm run indexer:sqlite localnet &)",
    "setup:testnet": "pnpm account:gen && pnpm check-balance testnet && pnpm run deploy testnet && pnpm run config:store testnet && (pnpm run indexer:sqlite testnet &)",
    "setup:mainnet": "pnpm account:gen && pnpm check-balance mainnet && pnpm run deploy mainnet && pnpm run config:store mainnet && (pnpm run indexer:sqlite mainnet &)",
    "build": "next build",
    "start": "next start",
    "// Production Environment": "----------------",
    "prod:localnet": "pnpm config:store localnet && (pnpm run indexer:sqlite localnet &) && pnpm next dev -p 3002",
    "prod:testnet": "pnpm config:store testnet && (pnpm run indexer:sqlite testnet &) && pnpm next",
    "prod:mainnet": "pnpm config:store mainnet && (pnpm run indexer:sqlite mainnet &) && pnpm next"
  },
  "dependencies": {
    "@0xobelisk/sui-cli": "^1.1.0",
    "@0xobelisk/sui-client": "^1.1.3",
    "@0xobelisk/sui-common": "^1.1.0",
    "@0xobelisk/sui-indexer": "^1.1.3",
    "@mysten/sui": "1.19.0",
    "@tanstack/react-query": "^5.17.19",
    "dotenv": "^16.4.5",
    "jotai": "^1.7.2",
    "next": "^15.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "lucide-react": "0.460.0",
    "@radix-ui/react-dialog": "1.1.2",
    "@radix-ui/react-separator": "1.1.0",
    "@radix-ui/react-slot": "1.1.0",
    "@radix-ui/react-tooltip": "1.1.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "tailwind-merge": "2.5.5",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^18",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "prettier": "^3.2.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2"
  }
}
